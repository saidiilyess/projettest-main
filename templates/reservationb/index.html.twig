{% extends 'baseB.html.twig' %}

{% block body %}

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-hoS4eBvZsAJMMeVsYswFkoRFUJxpg3/q5qJXp6U4Y4LpPC5lQsBaZZFzZ02I5Ji3OrsdzP5EO8bcpBfVff2Ug==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

	<style>
		body {
			display: flex;
			min-height: 100vh;
			align-items: center;
			justify-content: center;
			margin: 100px;
		}

		table {
			width: 80%;
			margin-top: 230px;
		}

		th,
		td {
			padding: 15px;
			text-align: left;
		}

		th {
			background-color: #3498db;
			color: white;
		}

		td {
			background-color: #ecf0f1;
		}

		footer {
			background-color: dark blue;
			padding: 0;
			text-align: center;
			position: fixed;
			bottom: 0;
			width: 100%;

		}
		h1 {
			margin-top: 230px;
			text-align: center;

		}
	</style>
	<h1>Reservation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Commantaire</th>
				<th>Statut</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.id }}</td>
					<td>{{ reservation.commantaire }}</td>
					<td>{{ reservation.statut }}</td>
					<td>
						<a href="{{ path('app_reservationb_show', {'id': reservation.id}) }}">show</a>
						<a href="{{ path('app_reservationb_edit', {'id': reservation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_reservationb_new') }}">Create new</a>
{% endblock %}
