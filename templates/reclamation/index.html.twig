{% extends 'baseB.html.twig' %}

{% block body %}

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-hoS4eBvZsAJMMeVsYswFkoRFUJxpg3/q5qJXp6U4Y4LpPC5lQsBaZZFzZ02I5Ji3OrsdzP5EO8bcpBfVff2Ug==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	<div class="slide-inner" style="background-image:url(../../front/images/slide-01.jpg)">

		<style>
			body {
				display: flex;
				min-height: 100vh;
				align-items: center;
				justify-content: center;
				margin: 100px;
			}

			table {
				width: 80%;
				margin-top: 230px;
			}

			th,
			td {
				padding: 15px;
				text-align: left;
			}

			th {
				background-color: #3498db;
				color: white;
			}

			td {
				background-color: #ecf0f1;
			}

			footer {
				background-color: dark blue;
				padding: 0;
				text-align: center;
				position: fixed;
				bottom: 0;
				width: 100%;

			}
			h1 {
				margin-top: 230px;
				text-align: center;

			}
		</style>

    <h1>Reclamation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_rec</th>
                <th>Description</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.dateRec ? reclamation.dateRec|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.type }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
{% endblock %}
